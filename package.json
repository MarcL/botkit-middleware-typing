{
    "name": "botkit-middleware-typing",
    "version": "0.0.1",
    "description": "Middleware to enable typing indicator",
    "main": "src/index.js",
    "scripts": {
        "lint": "eslint .",
        "test": "jest",
        "test:coverage": "jest --collect-coverage"
    },
    "keywords": [
        "botkit",
        "chatbot",
        "typing",
        "Messenger"
    ],
    "author": "Marc Littlemore <marc.littlemore@gmail.com> (https://marclittlemore.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:MarcL/botkit-middleware-typing.git"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "eslint": "^5.9.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jest": "^22.4.1",
        "eslint-plugin-mocha": "^5.2.0",
        "husky": "^1.3.1",
        "jest": "^24.5.0",
        "lint-staged": "^8.1.5",
        "prettier": "^1.15.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "yarn lint && lint-staged",
            "pre-push": "yarn test:coverage"
        }
    },
    "lint-staged": {
        "*.{js,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "engines": {
        "node": "8.x"
    }
}
